<UserControl
    x:Class="MarketPlace924.View.BuyerCartItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModel="using:MarketPlace924.ViewModel"
    Width="Auto" Height="Auto">

    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{x:Bind ViewModel.ProductName}" Width="200" />
        <TextBlock Text="{x:Bind ViewModel.Price, Mode=OneWay}" Width="100" />
        <TextBlock Text="{x:Bind ViewModel.Quantity}" Width="50" />

        <Button Content="+" Width="40" Command="{x:Bind ViewModel.IncreaseQuantityCommand}" />
        <Button Content="-" Width="40" Command="{x:Bind ViewModel.DecreaseQuantityCommand}" />
        <Button Content="Remove" Width="75" Command="{x:Bind ViewModel.RemoveItemCommand}" />
    </StackPanel>
</UserControl>
