<?xml version="1.0" encoding="utf-8"?>
<RuleSet Name="RazvanRuleSet" Description=" " ToolsVersion="17.0">
	<!-- Microsoft Code Quality Rules -->
	<Rules AnalyzerId="Microsoft.CodeQuality.Analyzers" RuleNamespace="Microsoft.CodeQuality.Analyzers">
		<!-- CA1001: Types that own disposable fields should be disposable -->
		<Rule Id="CA1001" Action="Warning" />
		<!-- CA1062: Validate arguments of public methods -->
		<Rule Id="CA1062" Action="Warning" />
		<!-- CA1307: Specify StringComparison for clarity and globalization -->
		<Rule Id="CA1307" Action="Warning" />
		<!-- CA1825: Avoid unnecessary allocations when using 'new List<T>(...)' -->
		<Rule Id="CA1825" Action="Warning" />
		<!-- CA1827: Do not use Count() when Any() is sufficient -->
		<Rule Id="CA1827" Action="Warning" />
		<!-- CA1829: Use Length/Count property instead of Count() when possible -->
		<Rule Id="CA1829" Action="Warning" />
		<!-- CA1834: Use 'StringBuilder.Append(char)' instead of 'Append(string)' with a single character -->
		<Rule Id="CA1834" Action="Warning" />
		<!-- CA1040: Avoid empty interfaces -->
		<Rule Id="CA1040" Action="Warning" />
		<!-- CA1068: CancellationToken parameters should come last -->
		<Rule Id="CA1068" Action="Warning" />
		<!-- CA2007: Do not directly await a Task without ConfigureAwait -->
		<Rule Id="CA2007" Action="Warning" />
		<!-- CA1819: Properties should not return arrays -->
		<Rule Id="CA1819" Action="Warning" />
	</Rules>

	<!-- Security Rules -->
	<Rules AnalyzerId="Microsoft.NetCore.Analyzers" RuleNamespace="Microsoft.NetCore.Analyzers">
		<!-- CA2100: Review SQL queries for security vulnerabilities (e.g., SQL Injection) -->
		<Rule Id="CA2100" Action="Warning" />
		<!-- CA5394: Do not use insecure randomness (like Random class in security-sensitive contexts) -->
		<Rule Id="CA5394" Action="Warning" />
		<!-- CA2215: Dispose methods should call base class Dispose -->
		<Rule Id="CA2215" Action="Warning" />
	</Rules>

	<!-- IDE Rules (Code Style and Simplifications) -->
	<Rules AnalyzerId="Microsoft.CodeAnalysis.CSharp.CodeStyle" RuleNamespace="Microsoft.CodeAnalysis.CSharp.CodeStyle">
		<!-- IDE0001: Simplify names (e.g., unnecessary namespace or class qualifiers) -->
		<Rule Id="IDE0001" Action="Warning" />
		<!-- IDE0005: Remove unnecessary using directives -->
		<Rule Id="IDE0005" Action="Warning" />
		<!-- IDE0059: Unnecessary assignment of a value that is never used -->
		<Rule Id="IDE0059" Action="Warning" />
		<!-- IDE0130: Namespace does not match file path -->
		<Rule Id="IDE0130" Action="Warning" />
		<!-- IDE0090: Use 'new(...)' instead of 'new Type(...)' when the type is obvious -->
		<Rule Id="IDE0090" Action="Warning" />
	</Rules>
</RuleSet>
