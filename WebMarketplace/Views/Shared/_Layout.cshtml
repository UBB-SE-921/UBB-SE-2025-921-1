<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMarketplace</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMarketplace.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <header>
        <nav class="bg-gray-800 text-white shadow-md">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <a href="/" class="text-xl font-bold">WebMarketplace</a>
                        </div>
                        <div class="hidden md:block">
                            <div class="ml-10 flex items-baseline space-x-4">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700">Home</a>
                                <a asp-area="" asp-controller="BorrowProduct" asp-action="Index" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700">Borrow Products</a>
                                <a asp-area="" asp-controller="BuyerProfile" asp-action="Index"  class="px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700">My Profile</a>
                                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700">Privacy</a>
                                <a asp-area="" asp-controller="BuyerWishlist" asp-action="Index" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700">My Wishlist</a>

                            </div>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <partial name="_CartButton" />
                        <partial name="_NotificationsButton" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 mt-10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="text-center text-gray-500">
                &copy; 2023 - WebMarketplace - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-600 hover:text-gray-900">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
