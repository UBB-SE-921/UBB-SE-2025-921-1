@model List<SharedClassLibrary.Domain.Product>

@{
    ViewData["Title"] = "My Market";
}

<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">My Market</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden hover:shadow-md transition">
                    <div class="h-48 bg-gray-200 flex items-center justify-center">
                        <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800">@product.Name</h3>
                        <p class="text-gray-600 text-sm mb-2">@product.Description</p>
                        <div class="flex justify-between items-center">
                            <span class="font-bold text-gray-900">$@product.Price.ToString("F2")</span>
                            <button onclick="addToCart(@product.ProductId)" class="bg-blue-600 hover:bg-blue-700 text-white py-1 px-3 rounded-md text-sm transition">Add to Cart</button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="col-span-3 text-center text-gray-500">No products available.</p>
        }
    </div>
</div>

@section Scripts {
    <script>
        async function addToCart(productId) {
            const response = await fetch('/MyMarket/AddToCart', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId })
            });

            const data = await response.json();
            if (data.success) {
                alert('Product added to cart!');
            } else {
                alert('Failed to add product to cart.');
            }
        }
    </script>
}
