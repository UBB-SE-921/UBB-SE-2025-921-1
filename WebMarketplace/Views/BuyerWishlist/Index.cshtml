@model WebMarketplace.Models.BuyerWishlistViewModel
@{
    ViewData["Title"] = "Your Wishlist";
}

<div class="container mt-4">
    <h1 class="mb-4">Your Wishlist</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model.IsEmpty)
    {
        <div class="alert alert-info">
            Your wishlist is currently empty. Browse our products and add items to your wishlist!
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            Browse Products
        </a>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.WishlistItems)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">Product Image</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text text-success">$@item.Price.ToString("F2")</p>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="@Url.Action("Details", "Product", new { id = item.ProductId })" class="btn btn-info">
                                View Details
                            </a>
                            <form asp-controller="BuyerWishlist" asp-action="RemoveFromWishlist" method="post">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
