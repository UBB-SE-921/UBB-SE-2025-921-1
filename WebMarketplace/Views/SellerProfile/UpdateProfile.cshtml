@model WebMarketplace.Models.SellerProfileViewModel
@{
    ViewData["Title"] = "Update Seller Profile";
}

<div class="bg-white shadow rounded-lg p-6">
    <div class="mb-6">
        <a asp-action="Index" class="text-blue-600 hover:text-blue-800 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Profile
        </a>
    </div>

    <h1 class="text-2xl font-bold text-gray-900 mb-6">Update Profile</h1>

    <form asp-action="UpdateProfile" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-6"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Seller.StoreName" class="block text-sm font-medium text-gray-700 mb-1">Store Name</label>
                <input asp-for="Seller.StoreName" class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Seller.StoreName" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Seller.StoreAddress" class="block text-sm font-medium text-gray-700 mb-1">Store Address</label>
                <input asp-for="Seller.StoreAddress" class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Seller.StoreAddress" class="text-sm text-red-500"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="Seller.StoreDescription" class="block text-sm font-medium text-gray-700 mb-1">Store Description</label>
                <textarea asp-for="Seller.StoreDescription" rows="4" class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
                <span asp-validation-for="Seller.StoreDescription" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Seller.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                <input asp-for="Seller.PhoneNumber" class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Seller.PhoneNumber" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Seller.Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Seller.Email" type="email" class="w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Seller.Email" class="text-sm text-red-500"></span>
            </div>
        </div>

        <div class="mt-8 flex justify-end">
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Update Profile
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
